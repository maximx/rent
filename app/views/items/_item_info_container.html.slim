.item-header
  .row
    .col-md-8
      h3.item-title = item.name

    .col-md-4
      - if items_controller?
        #rent.panel.panel-default data-spy="affix"
          .panel-heading.clearfix
            .hidden-sm.hidden-xs
              .price #{item.currency_price} 元
              .period = item.period

            h4.hidden-lg.hidden-md.text-center
              = link_to '預約承租', new_item_record_path(item, record), class: 'text-success'

          .panel-body.hidden-sm.hidden-xs
            = render partial: 'records/form', locals: { item: item, record: record, disabled_dates: disabled_dates }
            .text-right = render_collect_item_links(item, :remote)

.item-show-container
  .row
    .col-md-8
      dl.dl-horizontal
        dd
          = link_to user_path(item.lender) do
            = render_cl_avatar_md(item.lender)
            = ' ' + item.lender.account

        dt 出租物地址
        dd = item.address

        dt 租金
        dd = item.price_period

        dt 最短租期
        dd
          = item.minimum_period
          = item.period_without_per

        dt 押金
        dd = item.currency_deposit

        dt 描述
        dd = raw item.description

        dd = render_item_calendar_link(item)
        dd = render partial: 'messages/new', locals: { item: item } unless item.editable_by? current_user
