<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<section>
  <div>
  <% if current_user && @item.editable_by?(current_user) %>
    <%= link_to("修改", edit_item_path(@item)) %>
    <%= link_to("刪除", item_path(@item), method: :delete, data: { confirm: "確定要刪除嗎？" }) %>
  <% end %>
  </div>

  <div>
    <h2><%= @item.name %></h2>
    <div>
      <div><%= link_to(@item.lender.email, user_path(@item.lender)) %></div>
      <div>$<%= @item.price %>/<%= @item.period %></div>
      <div><%= @item.deposit %></div>
      <div><%= @item.address %></div>
      <div><%= @item.description %></div>
    </div>
    <% if current_user && current_user.is_collected?(@item) %>
      <%= link_to("取消收藏", uncollect_item_path(@item), method: :delete) %>
    <% else %>
      <%= link_to("收藏", collect_item_path(@item), method: :post) %>
    <% end %>
    <%= link_to("租下來", new_item_rent_record_path(@item)) %>
  </div>

  <div style='width: 800px;'>
    <div id="map" style='width: 800px; height: 400px;'></div>
  </div>

  <section>
    <div>問與答</div>
    <%= render partial: "questions/question", collection: @item.questions.includes(:asker) %>
    <%= render partial: "questions/ask_question", locals: { item: @item, question: @question } %>
  </section>
</section>

<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    markers = handler.addMarkers(<%= raw @maps.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>
