<%= content_for :javascript do %>
  <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
  <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<% end %>

<section>
  <div>
    <h2><%= @item.name %></h2>
    <div>
      <div><%= link_to(@item.lender.email, user_path(@item.lender)) %></div>
      <div>$<%= @item.price %>/<%= @item.period %></div>
      <div><%= @item.deposit %></div>
      <div><%= @item.address %></div>
      <div><%= @item.description %></div>
    </div>
    <%= render_collect_link(@item) %>
    <%= link_to("租下來", new_item_rent_record_path(@item)) unless current_user == @item.lender %>
  </div>

  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#rent-calendar" aria-controls="rent-calendar" role="tab" data-toggle="tab">出租日曆</a></li>
    <li role="presentation"><a href="#maps" aria-controls="maps" role="tab" data-toggle="tab">位置</a></li>
    <li role="presentation"><a href="#questions" aria-controls="questions" role="tab" data-toggle="tab">問與答</a></li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="rent-calendar">
      <div id="calendar"></div>
    </div>
    <div role="tabpanel" class="tab-pane" id="maps">
        <div id="map" style='width: 800px; height: 400px;'></div>
    </div>
    <div role="tabpanel" class="tab-pane" id="questions">
      <%= render partial: "questions/question", collection: @item.questions.includes(:asker) %>
      <%= render partial: "questions/ask_question", locals: { item: @item, question: @question } %>
    </div>
  </div>
</section>

<script type="text/javascript">
  $(document).ready(function() {

    handler = Gmaps.build('Google');
    handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
      markers = handler.addMarkers(<%= raw @maps.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
    });

    $('#calendar').fullCalendar({
      height: 600,
      lang: 'zh-tw',
      header: {
        left: 'prev,next today',
        center: 'title',
        right: 'month,agendaWeek,agendaDay'
      },
      events:  <%= raw @rent_records_json %>
      //TODO:editable, selectable
    });

  });
</script>

