<% breadcrumb :item_edit, @item %>

<div>
  <h2 class="text-center">修改<%= @item.name %></h2>

  <div class="item-pictures clearfix">
  <% @item.pictures.each do |picture| %>
    <div class="picture">
      <%= link_to("x", item_picture_path(@item, picture),
                  class: "close remove-picture",
                  method: :delete, remote: true,
                  data: { confirm: "確定要刪除嗎？" }) %>
      <%= render_cl_image_sm picture.public_id, data: { id: picture.id } %>
    </div>
  <% end %>
  </div>

  <%= render partial: "form", locals: { item: @item } %>
</div>
