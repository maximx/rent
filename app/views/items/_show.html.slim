- breadcrumb :item, item

section
  = render partial: 'items/item_info_container', locals: { item: item, record: record, disabled_dates: disabled_dates }

  .row
    .col-md-8
      = render_item_reviews_questions(item)
      .tab-content = yield

  #map

  .hide
    = form_for item, url: new_item_record_path(item), method: :get, html: { id: "new_record_form" } do
      = hidden_field_tag :record_started_at
      = hidden_field_tag :record_ended_at

  javascript:
    $(document).ready(function() {
      buildGoogleMap( #{raw maps.to_json} );
    });
