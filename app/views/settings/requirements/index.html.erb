<div class="span12">
  <table class="table table-borded">
    <thead>
      <tr>
        <th>名稱</th>
        <th>願付金額</th>
        <th>欲租日期</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @requirements.each do |requirement| %>
      <tr>
        <td><%= link_to(requirement.name, requirement_path(requirement)) %></td>
        <td><%= requirement.price %></td>
        <td><%= "#{requirement.started_at} ~ #{requirement.ended_at}" %></td>
        <td>
          <%= link_to("修改", edit_requirement_path(requirement)) %>
          <%= link_to("刪除", requirement_path(requirement), method: :delete, data: { confirm: "確定要刪除#{requirement.name}嗎？"}) %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
