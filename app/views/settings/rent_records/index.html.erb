<table class="table table-hover">
  <thead>
    <th>承租物</th>
    <th>評價</th>
    <th>租金</th>
    <th>期間</th>
    <th>狀態</th>
    <th></th>
  </thead>
  <tbody>
  <% @rent_records.each do |rent_record| %>
    <tr>
      <td><%= link_to(rent_record.item.name, item_path(rent_record.item)) %></td>
      <td>
        <%= link_to user_path(rent_record.lender), class: "img-circle img-thumbnail",
                    data: { toggle: "tooltip" }, title: rent_record.lender.email do %>
          <%= render_cl_avatar_sm(rent_record.lender) %>
        <% end %>

        <span><%= rent_record.review_of_user(current_user).human_rate %></span>
      </td>
      <td><%= rent_record.currency_price %></td>
      <td><%= render_datetime_period(rent_record, :date_only) %></td>
      <td><%= rent_record.aasm.human_state %></td>
      <td class="btn-group">
        <%= render_operate_rent_record_links(rent_record) %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= will_paginate @rent_records, class: "hidden-sm hidden-xs" %>
<%= will_paginate @rent_records, class: "hidden-lg hidden-md", page_links: false %>
