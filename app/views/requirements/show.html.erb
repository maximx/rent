<section>
  <div>
    <h2><%= @requirement.name %></h2>
    <div>
      <div><%= link_to(@requirement.demander.email, user_path(@requirement.demander)) %></div>
      <div>$<%= @requirement.price %></div>
      <div><%= @requirement.address %></div>
      <div><%= @requirement.description %></div>

      <div>
        <% @requirement.pictures.each do |picture| %>
          <%= cl_image_tag(picture.public_id, width: 450, height: 250) %>
        <% end %>
      </div>
    </div>
  </div>
</section>
