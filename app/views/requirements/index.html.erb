<h4>需求物列表</h4>

<table class="table table-hover">
  <thead>
    <tr>
      <th>物品名</th>
      <th>願付金額</th>
      <th>地址</th>
      <th>求租者</th>
    </tr>
  </thead>
  <tbody>
    <% @requirements.each do |requirement| %>
    <tr>
      <td><%= link_to(requirement.name, requirement_path(requirement)) %></td>
      <td><%= requirement.price %></td>
      <td><%= requirement.address %></td>
      <td><%= link_to(requirement.demander.email, user_path(requirement.demander)) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
