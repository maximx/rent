<div class="user-info-container row">
  <div class="col-xs-4 col-sm-3 text-center"><%= render_cl_avatar_lg(user) %></div>

  <div class="user-info col-xs-5 col-sm-5">
    <h4><%= link_to(user.email, user_path(user)) %></h4>
    <div>姓名∶<%= profile.name %></div>
    <div>地址∶<%= profile.address %></div>
    <div>電話∶<%= profile.phone %></div>

    <div class="user-operate"><%= render_follow_link(@user) if current_user != @user %></div>
  </div>

  <div class="col-xs-3 col-sm-4">
    <table class="table table-bordered">
      <tr class="active">
        <th>正評</th>
        <th>負評</th>
      </tr>
      <tr>
        <td><%= @total_reviews[Review.rates[:good]] || 0 %></td>
        <td><%= @total_reviews[Review.rates[:bad]] || 0 %></td>
      </tr>
    </table>
  </div>
</div>

<%= render_default_content(default_content[:obj], default_content[:text]) if defined? default_content %>
