<div><%= question.asker.account %> ∶ <%= question.content %></div>
<% if question.reply? %>
  <div><%= question.reply %></div>
<% elsif question.replied_by?(current_user) %>
  <div>
    <%= simple_form_for [question.item, question] do |f| %>
      <%= f.input :reply %>

      <div class="form-group">
        <div class="col-xs-offset-4 col-xs-8 col-sm-offset-3 col-sm-9">
        <%= f.button :submit, "回覆" %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
