header.tours-header
  = link_to raw(t('controller.tours.previous')), state_tours_path, class: 'btn btn-lg btn-default pull-left'
  = link_to raw(t('controller.tours.next')), dashboard_tours_path, class: 'btn btn-lg btn-default pull-right'
  h1.text-center = t('controller.tours.contract')

main.tours-container
  figure.tours-figure
    = image_tag 'tours_contract.png', class: 'tours-img'
