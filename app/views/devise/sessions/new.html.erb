<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
  <div class="form-group">
    <h2 class="col-sm-offset-2 col-sm-10">
      <%= t("devise.views.sign_in") %>
    </h2>
  </div>

  <%= f.input :email,
              as: :user_email_login,
              required: false,
              autofocus: true,
              label_html: { class: "col-sm-2 control-label" },
              wrapper_html: { class: "form-group" },
              input_html: { class: "form-control", placeholder: t("simple_form.labels.user.email") } %>

  <%= f.input :password,
              as: :user_password_login,
              required: false,
              label_html: { class: "col-sm-2 control-label" },
              wrapper_html: { class: "form-group" },
              input_html: { class: "form-control", placeholder: t("simple_form.labels.user.password") } %>

  <div class="form-group">
    <%= f.input :remember_me,
                as: :boolean,
                wrapper_html: { class: "col-sm-offset-2 col-sm-10 checkbox" } %>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.button :submit, t("devise.views.sign_in") %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= render "devise/shared/links" %>
    </div>
  </div>

<% end %>

