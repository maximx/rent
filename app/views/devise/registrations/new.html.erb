<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
  <div class="form-group">
    <h2 class="col-sm-offset-2 col-sm-10">
      <%= t("devise.views.sign_up") %>
    </h2>
    <div class="col-sm-offset-2">
      <%= f.error_notification %>
    </div>
  </div>


  <%= f.input :email,
              required: true,
              wrapper: :bootstarp_horizontal,
              input_html: { class: "form-control", placeholder: t("simple_form.labels.user.email") },
              autofocus: true %>

  <%= f.input :password,
              wrapper: :bootstarp_horizontal,
              required: true,
              input_html: { class: "form-control", placeholder: t("simple_form.labels.user.email") },
              hint: (t("devise.views.minimum_password_length", length: @minimum_password_length) if @validatable) %>

  <%= f.input :password_confirmation,
              wrapper: :bootstarp_horizontal,
              required: true,
              input_html: { class: "form-control", placeholder: t("simple_form.labels.user.password") } %>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.button :submit, t("devise.views.sign_up") %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= render "devise/shared/links" %>
    </div>
  </div>

<% end %>
