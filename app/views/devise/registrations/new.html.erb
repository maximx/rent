<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="form-group">
    <h2 class="col-xs-offet-4 col-xs-8 col-sm-offset-3 col-sm-9">
      <%= t("devise.views.sign_up") %>
    </h2>
    <div class="col-xs-offset-4 col-xs-8 col-sm-offset-3 col-sm-9">
      <%= f.error_notification %>
    </div>
  </div>


  <%= f.input :email,
              required: true,
              input_html: { placeholder: t("simple_form.labels.user.email") },
              autofocus: true %>

  <%= f.input :account,
              required: true,
              input_html: { placeholder: t("simple_form.labels.user.account") } %>

  <%= f.input :password,
              required: true,
              input_html: { placeholder: t("simple_form.labels.user.password") },
              hint: t("devise.views.minimum_password_length", length: @minimum_password_length) %>

  <%= f.input :password_confirmation,
              required: true,
              input_html: { placeholder: t("simple_form.labels.user.password_confirmation") } %>

  <div class="form-group">
    <%= f.input :agreement,
                as: :boolean,
                label: raw(t('simple_form.labels.user.agreement', terms_link: link_to('服務條款', terms_path))),
                wrapper: :default,
                wrapper_html: { class: "col-xs-offset-4 col-xs-8 col-sm-offset-3 col-sm-9 checkbox" } %>
  </div>

  <div class="form-group">
    <div class="col-xs-offset-4 col-xs-8 col-sm-offset-3 col-sm-9">
      <%= f.button :submit, t("devise.views.sign_up") %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-xs-offset-4 col-xs-8 col-sm-offset-3 col-sm-9">
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>
