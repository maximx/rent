<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
  <div class="form-group">
    <h2 class="col-sm-offset-2 col-sm-10">
      <%= t("devise.views.sign_up") %>
    </h2>
  </div>
  <%= f.error_notification %>

  <%= f.input :email,
              as: :user_email_login,
              required: true,
              autofocus: true,
              label_html: { class: "col-sm-2 control-label" },
              wrapper_html: { class: "form-group" },
              input_html: { class: "form-control", placeholder: t("simple_form.labels.user.email") } %>

  <%= f.input :password,
              as: :user_password_login,
              required: true,
              label_html: { class: "col-sm-2 control-label" },
              wrapper_html: { class: "form-group" },
              input_html: { class: "form-control", placeholder: t("simple_form.labels.user.email") },
              hint: (t("devise.views.minimum_password_length", length: @minimum_password_length) if @validatable) %>

  <%= f.input :password_confirmation,
              as: :user_password_login,
              required: true,
              label_html: { class: "col-sm-2 control-label" },
              wrapper_html: { class: "form-group" },
              input_html: { class: "form-control", placeholder: t("simple_form.labels.user.password") } %>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.button :submit, t("devise.views.sign_up") %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= render "devise/shared/links" %>
    </div>
  </div>

<% end %>
