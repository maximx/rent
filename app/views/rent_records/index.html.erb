<h4><%= link_to(@item.name, item_path(@item)) %></h4>
<table class="table">
  <thead>
    <tr>
      <th>承租人</th>
      <th>Email</th>
      <th>狀態</th>
      <th>預借時間</th>
      <th>歸還時間</th>
      <th>#</th>
    </tr>
  </thead>
  <tbody>
    <% @item.rent_records.each do |rent_record| %>
    <tr>
      <td><%= rent_record.name %></td>
      <td><%= link_to(rent_record.borrower.email, user_path(rent_record.borrower)) %></td>
      <td><%= rent_record.aasm_state %>
      <td><%= rent_record.started_at %></td>
      <td><%= rent_record.ended_at %></td>
      <td>
        <%= render_item_rent_record_link_by_state(@item, rent_record) %>
        <%= link_to("查看詳細資訊", item_rent_record_path(@item, rent_record)) if rent_record.viewable_by?(current_user) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
