<%- if remotipart_submitted? %>
  if($('.cover-image-container').size() > 0) {
    var html = "<%= escape_javascript(render(partial: 'pictures/carousel', locals: {pictures: @user.covers})) %>";
    $('#picture-carousel').remove();
    $('#picture_modal .modal-body').html(html);
  } else {
    var html = "<%= escape_javascript(render(partial: 'attachments/cover', locals: {cover: @user.covers.first, pictures: @user.covers})) %>";
    $('section:first').prepend(html);
  }
<% end %>
