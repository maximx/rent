<ul class="nav navbar-nav" role="menu">
  <li class="dropdown">
    <%= link_to "#", class: "dropdown-toggle",
                data: { toggle: "dropdown" },
                aria: { haspopup: true, expanded: false } do %>
      物品分類 <span class="caret"></span>
    <% end %>

    <ul class="dropdown-menu scrollable-menu">
      <% @categories.each do |category| %>
        <%= content_tag(:li, category.name, class: "dropdown-header") %>

        <% category.subcategories.each do |subcategory| %>
          <li><%= link_to(subcategory.name, subcategory_path(subcategory)) %></li>
        <% end %>
        <li role="separator" class="divider"></li>
      <% end %>
    </ul>
  </li>
</ul>
