= form_tag search_items_path, method: :get, id: "search-form", class: "navbar-form" do
  .form-group
    .input-group
      span.input-group-btn
        = select_tag :city, options_for_select(City.options_collection, params[:city]), include_blank: "選擇地點", class: "form-control"

      = text_field_tag :query, params[:query], class: 'form-control keyword', placeholder: '關鍵字'

      span.input-group-btn
        button.btn.btn-default type="submit"
          = render_icon("search")
