<ul class="user-navbar pull-right clearfix">
  <% if user_signed_in? %>
    <li class="nav-item">
      <%= link_to(current_user.email, user_path(current_user),
                  class: "nav-link",
                  title: "個人頁面",
                  data: { toggle: "tooltip", placement: "bottom" }) %>
    </li>
    <li class="nav-item">
      <%= link_to(content_tag(:span,"", class: "glyphicon glyphicon-plus").html_safe,
                  new_item_path,
                  class: "nav-link",
                  title: "新增出租物",
                  data: { toggle: "tooltip", placement: "bottom" }) %>
    </li>
    <li class="nav-item">
      <%= link_to(content_tag(:span,"", class: "glyphicon glyphicon-cog").html_safe,
                  settings_path,
                  class: "nav-link",
                  title: "管理與設定",
                  data: { toggle: "tooltip", placement: "bottom" }) %>
    </li>
    <li class="nav-item">
      <%= link_to(content_tag(:span, "", class: "glyphicon glyphicon-log-out").html_safe,
                  destroy_user_session_path,
                  method: :delete,
                  class: "nav-link",
                  title: "登出",
                  data: { toggle: "tooltip", placement: "bottom" }) %>
    </li>
  <% else %>
    <li class="nav-item">
      <%= link_to("註冊", new_user_registration_path, class: "btn btn-default") %>
      <%= link_to("登入", new_user_session_path, class: "btn btn-default") %>
    </li>
  <% end %>
</ul>
