<%= form_tag search_path, method: :get, class: "navbar-form navbar-right" do %>
  <%= text_field_tag :query, nil, class: "form-control", placeholder: "關鍵字", value: params[:query] %>
  <%= text_field_tag :started_at, nil, class: "form-control", placeholder: "起租日期", value: params[:started_at] %>
  <%= text_field_tag :ended_at, nil, class: "form-control", placeholder: "迄租日期", value: params[:ended_at] %>
  <%= submit_tag "搜尋", name: nil, class: "btn btn-success" %>
<% end %>
