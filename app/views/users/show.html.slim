.row
  .col-md-3
    .user-aside
      .user-avatar = render_cl_avatar_lg(@user)

      .panel.panel-default
        .panel-heading 總評價

        table.table.table-bordered.text-center
          thead
            tr
              th class="text-center" 正評
              th class="text-center" 負評
          tbody
            tr
              td = @total_reviews[Review.rates[:good]] || 0
              td = @total_reviews[Review.rates[:bad]] || 0

      - if @items.size > 0
        h3
          | 出租物
          small
            | (#{@items.size})
        ul.user-item-list
          - @items.limit(3).each do |item|
            li.item
              = link_to item_path(item) do
                = render_cl_image_sm(item.index_picture_public_id)
                .carousel-caption = render_item_name(item, 12)

          li.item = link_to("+ 看更多", search_path(user_id: @user)) if @items.size > 3

  .col-md-9
    h2.user-account.clearfix
      span.text-muted 您好，我是#{ @user.account }
      .pull-right = render_follow_link(@user)

    - unless @profile.description.nil?
      .panel.panel-default
        .panel-heading 描述
        .panel-body = raw @profile.description

    - unless @lender_reviews.empty? && @borrower_reviews.empty?
      h3 評價

      - unless @borrower_reviews.empty?
        h4.text-warning 出租者評價
        = render partial: "reviews/review", collection: @borrower_reviews, as: :review

      - unless @lender_reviews.empty?
        h4.text-warning 承租者評價
        = render partial: "reviews/review", collection: @lender_reviews, as: :review
