#record_modal.modal.fade tabindex="-1" role="dialog" aria-labelledby="record_operate_modal"
  .modal-dialog role="document"
    .modal-content
      = simple_form_for record_state_log, url: '', method: :put, html: { id: 'record_state_log_form' } do |f|
        .modal-header
          button.close type="button" data-dismiss="modal" aria-label="Close"
            span aria-hidden="true" &times;
          h4.modal-title

        .modal-body
          = f.simple_fields_for :attachments, record_state_log.attachments.build do |p|
            = p.input :public_id, as: :file_select, input_html: { multiple: true, class: 'record_state_log_text' }
          = f.input :info, input_html: { class: 'record_state_log_text' }

        .modal-footer
          button.btn.btn-default type="button" data-dismiss="modal" 取消
          = f.button :submit, '送出'
